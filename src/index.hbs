<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{htmlWebpackPlugin.options.title}}</title>
  </head>
  <body>
    <div class="main">
      <div class="top">
        <div class="search-box">
          <form action="" id = "location-form">
            <input type="text" id="location" name="location" />
            <button type="submit" class="location-submit">Submit</button>
          </form>
        </div>
        <div class="current">
            <h1 class="location-title"></h1>
            <p class="cur-deg"><span></span>°</p>
            <h3 class="cur-condition"></h3>
            <div class="cur-hi-lo">
                <div class="cur-hi">
                    <p>H: <span class="cur-hi-deg"></span>°</p>
                </div>
                <div class="cur-lo">
                    <p>L: <span class="cur-lo-deg"></span>°</p>
                </div>
            </div>
            <div class="cur-time">
                <p class="hour"></p>
                <p class="date"></p>
            </div>
        </div>
        <div class="degrees-toggle">
            <button class="deg-c-btn" data-deg="c">C°</button>
            <button class="deg-f-btn" data-deg="f">F°</button>
        </div>
      </div>
      <div class="hourly">
        <h2>Hourly Forecast</h2>
        <div class="slider-container">
            <div class="wide-hours-container"></div>
        </div>
      </div>
      <div class="weekly">
        <h2>Weekly Forecast</h2>
      </div>
    </div>
  </body>
</html>